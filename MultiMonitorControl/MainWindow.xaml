<Window x:Class="MultiMonitorControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multi-Monitor Control Panel v1.0" 
        Height="750" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E"
        MinHeight="600" MinWidth="800">

    <Window.Resources>
        <!-- Modern Dark Theme Styles -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                   BorderBrush="{TemplateBinding BorderBrush}" 
                                   BorderThickness="{TemplateBinding BorderThickness}"
                                   CornerRadius="6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#FF333333" CornerRadius="6,6,0,0" Padding="8,4">
                                        <ContentPresenter ContentSource="Header" TextElement.Foreground="#FFCCCCCC" TextElement.FontWeight="SemiBold"/>
                                    </Border>
                                    <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="90,5,50,5"/>
            <Setter Property="Foreground" Value="#FF0078D4"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ValueDisplay">
            <Setter Property="Foreground" Value="#FFAAAAAA"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF106EBE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF666666"/>
                                <Setter Property="Foreground" Value="#FF999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="QuickProfileButton">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF606060"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="3"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF606060"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF606060"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="StatusText">
            <Setter Property="Foreground" Value="#FF51CF66"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
            <TextBlock Text="Multi-Monitor Control Panel" Style="{StaticResource HeaderText}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Label Content="Monitor:" Foreground="White" VerticalAlignment="Center" Width="60"/>
                <ComboBox x:Name="MonitorComboBox" 
                         ItemsSource="{Binding Monitors}" 
                         SelectedItem="{Binding SelectedMonitor}"
                         Width="350"
                         Margin="10,0"
                         Foreground ="Black" />
                <Button Content="🔄" Click="RefreshMonitors_Click" Width="35" Height="28" Margin="5,0" ToolTip="Refresh Monitors (F5)"/>
            </StackPanel>

            <!-- Quick Profiles -->
            <GroupBox Header="Quick Profiles (F1-F4)" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="🎮 Gaming" Style="{StaticResource QuickProfileButton}" Tag="Gaming" Click="QuickProfile_Click" ToolTip="F1 - Gaming Profile"/>
                    <Button Content="💼 Office" Style="{StaticResource QuickProfileButton}" Tag="Office Work" Click="QuickProfile_Click" ToolTip="F2 - Office Profile"/>
                    <Button Content="🎬 Movie" Style="{StaticResource QuickProfileButton}" Tag="Movie Watching" Click="QuickProfile_Click" ToolTip="F3 - Movie Profile"/>
                    <Button Content="🖼️ Photo" Style="{StaticResource QuickProfileButton}" Tag="Photo Editing" Click="QuickProfile_Click" ToolTip="F4 - Photo Editing"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Control Panels -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
            <StackPanel Orientation="Vertical">

                <!-- Brightness Control -->
                <GroupBox Header="💡 Brightness Control">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="Brightness:"/>
                        <Slider Grid.Column="1" 
                               x:Name="BrightnessSlider"
                               Minimum="0" 
                               Maximum="100" 
                               Value="50"
                               ValueChanged="BrightnessSlider_ValueChanged"
                               TickFrequency="10"
                               TickPlacement="BottomRight"/>
                        <TextBlock Grid.Column="2" 
                                  Text="{Binding ElementName=BrightnessSlider, Path=Value, StringFormat='{}{0:F0}%'}" 
                                  Style="{StaticResource ValueDisplay}"/>
                    </Grid>
                </GroupBox>

                <!-- Contrast Control -->
                <GroupBox Header="🎛️ Contrast Control">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="Contrast:"/>
                        <Slider Grid.Column="1" 
                               x:Name="ContrastSlider"
                               Minimum="0" 
                               Maximum="100" 
                               Value="50"
                               ValueChanged="ContrastSlider_ValueChanged"
                               TickFrequency="10"
                               TickPlacement="BottomRight"/>
                        <TextBlock Grid.Column="2" 
                                  Text="{Binding ElementName=ContrastSlider, Path=Value, StringFormat='{}{0:F0}%'}" 
                                  Style="{StaticResource ValueDisplay}"/>
                    </Grid>
                </GroupBox>

                <!-- Color Controls -->
                <GroupBox Header="🎨 Color Balance">
                    <StackPanel>
                        <!-- Red Gain -->
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="Red:" Foreground="#FFFF6B6B"/>
                            <Slider Grid.Column="1" 
                                   x:Name="RedSlider"
                                   Minimum="0" 
                                   Maximum="100" 
                                   Value="50"
                                   ValueChanged="RedSlider_ValueChanged"
                                   TickFrequency="10"
                                   TickPlacement="BottomRight"/>
                            <TextBlock Grid.Column="2" 
                                      Text="{Binding ElementName=RedSlider, Path=Value, StringFormat='{}{0:F0}'}" 
                                      Style="{StaticResource ValueDisplay}"/>
                        </Grid>

                        <!-- Green Gain -->
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="Green:" Foreground="#FF51CF66"/>
                            <Slider Grid.Column="1" 
                                   x:Name="GreenSlider"
                                   Minimum="0" 
                                   Maximum="100" 
                                   Value="50"
                                   ValueChanged="GreenSlider_ValueChanged"
                                   TickFrequency="10"
                                   TickPlacement="BottomRight"/>
                            <TextBlock Grid.Column="2" 
                                      Text="{Binding ElementName=GreenSlider, Path=Value, StringFormat='{}{0:F0}'}" 
                                      Style="{StaticResource ValueDisplay}"/>
                        </Grid>

                        <!-- Blue Gain -->
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="Blue:" Foreground="#FF339AF0"/>
                            <Slider Grid.Column="1" 
                                   x:Name="BlueSlider"
                                   Minimum="0" 
                                   Maximum="100" 
                                   Value="50"
                                   ValueChanged="BlueSlider_ValueChanged"
                                   TickFrequency="10"
                                   TickPlacement="BottomRight"/>
                            <TextBlock Grid.Column="2" 
                                      Text="{Binding ElementName=BlueSlider, Path=Value, StringFormat='{}{0:F0}'}" 
                                      Style="{StaticResource ValueDisplay}"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Monitor Information -->
                <GroupBox Header="📊 Monitor Information">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="{Binding SelectedMonitor, StringFormat='Monitor: {0}'}" 
                                      Foreground="White" 
                                      TextWrapping="Wrap"
                                      Margin="0,2"/>

                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Status: " Foreground="Gray"/>
                                <TextBlock Text="{Binding StatusMessage}" 
                                          Style="{StaticResource StatusText}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="Keyboard Shortcuts:" Foreground="#FFAAAAAA" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock Text="F1-F4: Quick Profiles" Foreground="#FFAAAAAA" FontSize="11"/>
                            <TextBlock Text="F5: Refresh Monitors" Foreground="#FFAAAAAA" FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Margin="0,15,0,10">

            <Button Content="💾 Save Profile" 
                   Click="SaveProfile_Click"
                   ToolTip="Save current settings to file"/>

            <Button Content="📁 Load Profile" 
                   Click="LoadProfile_Click"
                   ToolTip="Load settings from file"/>

            <Button Content="🔄 Reset to Defaults" 
                   Click="ResetToDefaults_Click"
                   ToolTip="Reset all values to default settings"/>

        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#FF2A2A2A" CornerRadius="4" Padding="10,5" Margin="0,5,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="💡 Tip: Settings are automatically saved. Use quick profiles for common scenarios." 
                          Foreground="#FFAAAAAA" 
                          FontSize="11" 
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>